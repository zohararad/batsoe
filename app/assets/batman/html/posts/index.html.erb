<section class="posts">
  <%- @posts.each do |post| %>
  <article class="post" data-foreach-post="posts">
    <header>
      <h3 class="post-title">
        <a href="<%= post_slug_path(post.id, post.slug) %>" data-route="'post_slug' | asNamedRoute post.id, post.slug" data-bind="post.title"><%= post.title %></a>
      </h3>
    </header>
    <p data-bind="post.excerpt"><%= post.excerpt %></p>
    <footer class="post-details">
      <p class="post-updated-at" data-bind="post.updated_at | formatDate 'DD MMM YYYY, HH:mm' | prepend 'Updated: '"><%= post.updated_at.strftime('%d %b %Y, %H:%M') %></p>
    </footer>
  </article>
  <%- end %>
</section>